  font-size: 27rpx;
  border-bottom: 1rpx solid #dcdcdc;
}
.list{
 flex: 1;
 font-size: 32rpx;
}
.list:nth-child(2){
 position: relative; 
}
.list:nth-child(2)::before{
  content: '|';
  position: absolute;
  width:2rpx;
  left: 0;
  top: 0;
  bottom: 19rpx;
  color: #bfbfbf;  
}
.list:nth-child(2)::after{
  content: '|';
  position: absolute;
  width:2rpx;
  right: 0;
  top: 0;
  bottom: 19rpx;
  color: #bfbfbf;  
}
.list.select{
  color: #e4be97;
  border-bottom: 1rpx solid #e4be97;
}
