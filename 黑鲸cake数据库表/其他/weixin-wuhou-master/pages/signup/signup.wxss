/* 爱好选中后的颜色和边框 */
.is_checked {
  position: relative;  
  color: #d3ab82;
  border: 1rpx solid #d3ab82; 
}
/* 选中白色对勾 */
.hobby-select{
  width: 18rpx;
  height: 20rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  z-index: 10;
}
/* 选中三角形效果 */
.is_checked::after{
  content: '';
  position: absolute;
  right: 0;
  bottom: 0;
  width: 0;
  height: 0;
  border-top: 30rpxx solid transparent;
  border-bottom: 30rpx solid transparent;
  border-left: 30rpx solid #d3ab82;
  border-bottom-right-radius: 10rpx;
  transform:rotate(180deg);
  -ms-transform:rotate(180deg); 	/* IE 9 */
  -moz-transform:rotate(180deg); 	/* Firefox */
  -webkit-transform:rotate(180deg); /* Safari 和 Chrome */
  -o-transform:rotate(180deg);
}
