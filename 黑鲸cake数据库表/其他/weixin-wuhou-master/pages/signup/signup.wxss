/* 商品图片，标题，价格，数量 */
.picker-date
.goodsMessage{
  width: 750rpx;
}
.goodshead{
  padding: 30rpx;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: justify;
  -ms-flex-pack: justify;
  justify-content: space-between;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
}
/* 商品图片 */
.goodspic{
  width: 163rpx;
  height: 163rpx;
  background-size: cover;
  background-position: center center;
}
/* 除了图片的右边 */
.goodsMessage .right{
  width: 70%;
}
/* 商品标题 */
.right .goodsTitle{
  font-size: 30rpx;
  display: block;
}
/* 商品当前价格 */
.right .nowPrice{
  font-size: 28rpx;
  display: inline-block;
  margin-top: 30rpx;
}
.right .goodsPrice{
  color: #ff4545;
  font-size: 28rpx;
}
/* 商品数量 */
.right .NumberCount{
  height: 38rpx;
  margin-top: 30rpx;
  float: right;
  font-size: 22rpx;
  line-height: 40rpx;
  text-align: center;
  border: 1rpx solid #8f8f8f;
}
/* 商品数量增加 */
.right .NumberCount .add{
  width: 39rpx;
  height: 38rpx;
  float: left; 
}
/* 商品当前数量 */
.right .NumberCount .nowNumber{
  width: 57rpx;
  height: 38rpx;
  float: left;
  border-left: 1rpx solid #8f8f8f;
  border-right: 1rpx solid #8f8f8f;
}
/* 商品数量减少 */
.right .NumberCount .reduce{
  float: left;
  width: 39rpx;
  height: 38rpx;
}
.right .NumberCount .discount{
  width: 54rpx;
  height: 38rpx;
  float: left;
}
