	border:solid 1px #d1d1d1;
	border-radius:20rpx;
	text-align:center;
  padding: 10rpx 20rpx;
	font-size:24rpx;
  margin-left:20rpx;
  width: 100rpx;
	
}
.comment_order{
  color:white;
  border:none;
}
.noMore{
  width:100%;
  color: gray;
  font-size: 24rpx;
  text-align: center;
  margin-top: 50rpx;
}
.flexRowBetween{
	display:flex;
	flex-direction:Row;
	justify-content:space-between;
}
.flexRowEnd{
	display:flex;
