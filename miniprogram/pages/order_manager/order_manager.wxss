	height:65rpx;
	line-height:65rpx;
	background:#fff;
	font-size:28rpx;
	padding:0rpx 25rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  margin-top:20rpx;
}
.tlt_left{
	color:#666;
 
}
.tlt_right{
	/*color:#FFD700*/
  color:rgb(244, 208, 0)
 
}
