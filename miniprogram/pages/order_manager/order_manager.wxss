    border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.order_left image{
	width:100%;
	height:160rpx;
  margin-right:20rpx;
}
.order_name{
	width:74%;
	height:160rpx;
	}
.order_name .text1{
	font-size:28rpx;
  height: 25%;
  font-weight: bold;
}
.orders{
	height:25%;
	align-items:flex-end;
