page{
	width:100%;
	height:100vh;
	background:#f5f5f5;
}
.order_sort{
	position: fixed;
  top:0;
  width: 100%;
	border-bottom:solid 1px #ececec;
	height:87rpx;
	line-height:84rpx;
	background:#fff;
  justify-content:space-around;
  }
.order_item{
	font-size:28rpx;
	color:#333;
}
.order_this{
	color:#FFD700;
	border-bottom:solid 3rpx #FFD700;
}
.all_select image{
	width:30rpx;
	height:30rpx;
}
.order_left{width:26%;
	text-align:left;
     display: flex;    /*设置显示样式**/

    vertical-align: center; /**垂直居中*/
    justify-content: center; /**内容居中*/
    flex-direction:row; 
}
.order_all{
	display:none;
}
.order_show{
	display:block;
  margin: 107rpx 20rpx 20rpx 20rpx;
  
}
.order_list{
    margin-top: 87rpx;
    margin-bottom:50rpx;
	}
.order_all .orderlistShow{
	width:100%;
	height:200rpx;
	
	align-items:center;
}
