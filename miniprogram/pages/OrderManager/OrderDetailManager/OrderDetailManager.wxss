
.confirm-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  overflow-x:hidden;
}


/** 提交支付按钮 **/

.submit-container {
  justify-content: flex-end;
  width: 100%;
  height: 100rpx;
  display: flex;
  position: fixed;
  z-index: 100;
  bottom: 0rpx;
  background: white;
  border-top-style: solid;
  border-width: 1rpx;
  border-color: #f2f2f2;
}

.submit-container .submit-left {
  width: 65%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.submit-left .total-amount {

  margin-right: 20rpx;
}

.submit-container .submit-right {

  color: white;
  width: 35%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}



/*录入发货信息遮罩层*/
.commodity_screen{
  opacity:0;
  background-color:black;
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 666;
  bottom:0;  
}
.catalog_area{
  min-height: 900rpx;
  max-height: 900rpx;
  position: fixed;
  z-index: 888;
  bottom:0;
  width:100%;
  background: #F8F8F8;
  box-sizing:border-box;
}
.catalog_area .sendInfor_title{
  width: 100%;
  height: 50rpx;
  border-bottom:1px solid #e5e5e5;
  padding: 20rpx;
}
.catalog_area .sendInfor_title .cancel{
  width: 40rpx;
  height:40rpx;
  position: absolute;
  top:20rpx;
  right:20px;
}
.catalog_area .sendInfor_title text{
  width: 100%;
  text-align: center;
}
.catalog_area .send_submit {
  width:100%;
  height: 50px;
  background-color:#ff6700;/**橘**/
  line-height: 50px;
  text-align: center;
  color: #FFF;
  position: fixed;
  bottom: 0;
  left: 0;
  margin: 0;
  padding: 0;
}
