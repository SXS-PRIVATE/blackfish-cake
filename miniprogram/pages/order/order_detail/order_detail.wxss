.follow_satus {
  display: FLEX;
  background: #fff;
  justify-content: space-between;
  padding: 5rpx 20rpx;
}

.follow_satus .follow_address {
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
}

.follow_satus .follow_address .label {
  border-radius: 50%;
  position: absolute;
 
}

.date {
  font-size: 20rpx;
  padding-bottom:20rpx;
  color: #f23b4d;
  
}
