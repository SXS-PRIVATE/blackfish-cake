.confirm-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  overflow-x:hidden;
}


.total-amount {
  color: #ff6347;
}

/** 提交支付按钮 **/

.submit-container {
  justify-content: flex-end;
  width: 100%;
  height: 100rpx;
  display: flex;
  position: fixed;
  z-index: 100;
  bottom: 0rpx;
  background: white;
  border-top-style: solid;
  border-width: 1rpx;
  border-color: #f2f2f2;
}

.submit-container .submit-left {
  width: 65%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.submit-left .total-amount {
  color: #ff6347;
  margin-right: 20rpx;
}

.submit-container .submit-right {
  background: #ff6347;
  color: white;
  width: 35%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

